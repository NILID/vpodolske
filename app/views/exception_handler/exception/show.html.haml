.error-page.text-center
  .tr-section.tr-section-padding
    .error-page-content
      .logo.text-center
        = link_to root_url, class: 'navbar-brand' do
          = image_tag 'logo-small.png', class: 'img-responsive'

      .not-found
        = content_tag :div, class: "exception", data: { status: @exception.status, response: @exception.response.to_s.humanize, rails: Rails.version }, onclick: "location.href=\"#{root_url}\";" do
          %h1= content_tag :span, @exception.description.html_safe
          %p= t "exception.error_#{@exception.status}"
          = link_to t('shared.to_home'), root_url, class: 'btn btn-primary'
