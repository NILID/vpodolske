= form_for @video, html: { class: 'form form-horizontal video' } do |f|
  .form-group
    = f.label :url, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :url, class: 'form-control', required: true
      = f.error_span(:url)
  .form-group
    = f.label :title, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :title, class: 'form-control', required: true
      = f.error_span(:title)
  .form-group
    = f.label :keyword_list, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :keyword_list, class: 'form-control'
      = f.error_span(:keyword_list)

  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('actions.cancel'), videos_path, class: 'btn btn-default'
