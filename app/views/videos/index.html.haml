- set_meta_tags title: @title,
  description: @title,
  keywords: @title

.page-header-old
  %h1
    = @title
    %small
      - if can? :create, Video
        = link_to t('actions.create'), new_video_path, class: 'btn btn-primary'

.row.tag-list
  .col-12
    - tag_cloud(@tags, %w(tag1 tag2 tag3 tag4)) do |tag, css_class|
      = link_to tag.name, videos_path(by_tag: tag.name), class: "#{css_class} label label-info"

.row
  .tr-section
    = render @videos
