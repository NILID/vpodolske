- if %w[photos places].include? params[:controller]
  %li{ class: (params[:controller] == 'places' && params[:action] == 'index') ? 'active' : nil }= link_to t('live.title'), places_path
  %li{ class: ((%w[places photos].include? params[:controller]) && params[:action] != 'index') ? 'active' : nil }= link_to t('live.gallery'), gallery_places_path
- else
  %li{ class: params[:controller] == 'articles'?   'active' : nil }= link_to t('articles.title'), articles_path
  %li{ class: params[:controller] == 'events'?     'active' : nil }= link_to t('events.title'),   events_path
  %li{ class: params[:controller] == 'categories'? 'active' : nil }= link_to t('helper'),         categories_path
  %li{ class: params[:controller] == 'users'?      'active' : nil }= link_to t('users.title'),    users_path
  %li= link_to t('live.title'), places_path

  - if can? :manage, :all
    %li.dropdown
      = link_to('#', 'data-toggle' => 'dropdown') do
        = t 'shared.admin'
        %b.caret
      %ul.dropdown-menu
        %li= link_to t('articles.title'), manager_articles_path
        %li= link_to t('comments.title'), comments_path
        %li= link_to t('bugs.title'),     bugs_path
        %li= link_to t('note.title'),     notes_path
        %li= link_to t('admin.letters'),  letters_path
        - if Rails.env.development?
          %li.divider(role='separator')
          %li= link_to t('admin.preview_emails'), rails_mailers_path
