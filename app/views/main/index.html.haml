- set_meta_tags title: t(:main),
  description: t('baseseo.main.desc'),
  keywords: t('baseseo.main.words'),
  index: true

.row.tr-content
  .col-12
    .tr-section
      .row
        = link_to t('organizations.add'), new_organization_path, class: 'btn btn-primary col mx-5'
        = link_to t('events.add'), new_event_path, class: 'btn btn-primary col mx-5'

.row.tr-content
  - unless @articles.empty?
    .col-sm-6.medium-post-responsive
      .tr-section
        .section-title.title-before
          %h2= link_to t('articles.last'), articles_path
        %table.table= render @articles

  .col-sm-6
    .tr-section.local-events
      .section-title.title-before
        %h2= link_to t('events.title'), events_path
      %ul.nav.nav-tabs#events-tab(role='tablist')
        %li.nav-item
          = link_to t('event.today'), '#today',       data: { toggle: 'tab' }, aria: { expanded: true, controls: 'today', selected: 'true' },     class: 'nav-link active', id: 'today-tab'
        %li.nav-item
          = link_to t('event.tomorrow'), '#tomorrow', data: { toggle: 'tab' }, aria: { expanded: true, controls: 'tomorrow', selected: 'false' }, class: 'nav-link',        id: 'tomorrow-tab'
        %li.nav-item
          = link_to t('event.soon'), '#soon',         data: { toggle: 'tab' }, aria: { expanded: true, controls: 'soon', selected: 'false' },     class: 'nav-link',        id: 'soon-tab'
      .tab-content#events-tab-content
        #today.tab-pane.active.fade.show(role='tabpanel' aria-labelledby='today-tab')
          - unless @ev_today.empty?
            .row.row-cols-1.row-cols-md-2
              = render @ev_today, lazy: true
          - else
            %p= t 'shared.empty'
        #tomorrow.tab-pane.fade.in(role='tabpanel' aria-labelledby='tomorrow-tab')
          - unless @ev_tomorrow.empty?
            .row.row-cols-1.row-cols-md-2
              = render @ev_tomorrow, lazy: false
          - else
            %p= t 'shared.empty'
        #soon.tab-pane.fade.in(role='tabpanel' aria-labelledby='soon-tab')
          - unless @ev_soon.empty?
            .row.row-cols-1.row-cols-md-2
              = render @ev_soon, lazy: false
          - else
            %p= t 'shared.empty'

  - if @comments.size > 0
    .col-sm-6
      .tr-section.local-events
        .section-title.title-before
          %h2= t('comments.new_list')
        %ul.post-comment.post-comment-mini
          = render @comments, show_commentable: true

  .col-sm-3.tr-sidebar
    - unless @users.empty?
      .tr-widget.meta-widget
        .widget-title.title-before
          %span= t :newusers
        .tab-content
          %ul.authors-post
            - @users.each do |user|
              %li
                .entry-meta
                  .author-image= link_to image_tag(user.profile.avatar(:thumb), class: 'img-fluid'), user
                  .author-info
                    %h2= link_to user.login, user