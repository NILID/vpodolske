.col-12
  .tr-section
    %ul.list-inline
      - if @hidden_orgs > 0
        %li.list-inline-item
          = link_to(hidden_organizations_path, class: 'btn btn-primary')do
            = t('organizations.hidden')
            %span.badge.badge-secondary= @hidden_orgs
      %li.list-inline-item= link_to t('organizations.blocked'), blocked_organizations_path, class: 'btn btn-primary'
      %li.list-inline-item= link_to '+ category', new_category_path, class: 'btn btn-primary'
      %li.list-inline-item= link_to '+ parse categories', create_list_categories_path, class: 'btn btn-primary', method: :post
      %li.list-inline-item= link_to 'search', organizations_path(to_search_nil: 'site'), class: 'btn btn-secondary'
