- model_class = Letter
.page-header-old
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:content) + ':'
  %br
  = @letter.content
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @letter.email


= link_to t('.back', :default => t("helpers.links.back")), letters_path, :class => 'btn btn-secondary'
= link_to t('.destroy', :default => t("helpers.links.destroy")), letter_path(@letter), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
